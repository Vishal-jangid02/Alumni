<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_jobAvailable"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/txt_jobType"
                android:textStyle="bold"
                android:text="jobtype"
                android:textSize="25sp"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/experience"
                android:id="@+id/job_year"
                android:layout_below="@+id/txt_jobType"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@+id/job_year"
                android:id="@+id/txt_jobExperience"
                android:layout_below="@+id/txt_jobType"
                android:text="experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/location"
                android:id="@+id/job_location"
                android:layout_below="@+id/job_year"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/job_location"
                android:id="@+id/txt_jobLocation"
                android:layout_below="@+id/txt_jobExperience"
                android:text="location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/skills"
                android:id="@+id/job_skills"
                android:layout_below="@+id/job_location"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/job_location"
                android:id="@+id/txt_jobSkills"
                android:layout_below="@+id/txt_jobLocation"
                android:text="skills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>