                        android:textColor="@color/colorwhite"
                        android:layout_marginLeft="20dp"
                        android:text="entercompany"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp" />

                </LinearLayout>
