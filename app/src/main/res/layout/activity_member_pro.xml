                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/colorwhite"
                        android:text="Batch:-"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
